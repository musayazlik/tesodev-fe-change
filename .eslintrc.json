{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "prettier", "eslint-config-prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier", "eslint-plugin-prettier"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "react/jsx-props-no-spreading": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "printWidth": 3000,
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "always",
        "semi": false,
        "jsxSingleQuote": true,
        "singleQuote": true,
        "useTabs": false,
        "tabWidth": 2
      }
    ]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
